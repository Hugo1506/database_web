@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de registo";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
            A aplicação não tem uma confirmação real, normalmente isto seria enviado por email <a id="confirm-link" href="@Model.EmailConfirmationUrl">clique aqui para confirmar a conta</a>
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}

