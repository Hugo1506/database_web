@model database_web.Models.Anuncio

@{
    ViewData["Title"] = "Compra";
}

<h1>Compra</h1>

<h4>Escolha um carrinho ou faça um novo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Compra">
             <div class="form-group">
                <label class="control-label">Carrinhos</label>
                <select  class="form-control" asp-items="ViewBag.Carrinhos"></select>
             </div>
            <div class="form-group">
                <input asp-action="EnviaCarrinho" type="submit" value="escolher" class="btn btn-primary" />
            </div>
             <div class="form-group">
                <input asp-action="EnviaNovoCarrinho" type="submit" value="Criar novo carrinho" class="btn btn-primary" />
            </div>  
        </form>
    </div>
</div>

<div>
</div>


