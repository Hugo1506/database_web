@model IEnumerable<database_web.Models.Review>

@{
    ViewData["Title"] = "ReviewsPessoais";
}

<h1>As minhas reviews</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.conteudo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompradorFK)
            </th>
            <th>
                Produto                 
            </th>
            <th>
                Vendedor 
            </th>
            <th>
                Preço
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.conteudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompradorFK)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.anuncio.Produto.nome) 
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.anuncio.vendedor.nome) 
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.anuncio.preco) € 
            </td>
                <td>
                    <a asp-action="verAnuncio" asp-route-id="@item.Id">ir para o anuncio</a>
                </td>

        </tr>
}
    </tbody>
</table>
